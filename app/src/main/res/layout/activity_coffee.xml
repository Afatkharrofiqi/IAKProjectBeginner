<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_coffee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/mTextNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:hint="Your Name"
        android:textSize="@dimen/text_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:text="menu"
        android:textAllCaps="true"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/mSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        tools:layout_width="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:text="Toping"
        android:textAllCaps="true"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/mRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin">

        <RadioButton
            android:id="@+id/mRadioItem1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Susu" />

        <RadioButton
            android:id="@+id/mRadioItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coklat" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:text="quantity"
        android:textAllCaps="true"
        android:textSize="@dimen/text_14"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mButtonPlus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onClickPlus"
            android:text="+"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/mTextQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="@dimen/text_14"
            tools:text="1" />

        <Button
            android:id="@+id/mButtonMin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="onClickMin"
            android:text="-"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/mTextHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:text="$0"
        android:textSize="@dimen/text_16"
        tools:text="5$" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/mButtonOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickOrder"
            android:text="Order"
            android:textSize="@dimen/text_14" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickReset"
            android:text="Reset"
            android:textSize="@dimen/text_14"
            android:id="@+id/mButtonReset" />

        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mButtonBack"
            android:onClick="onClickBack"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>
